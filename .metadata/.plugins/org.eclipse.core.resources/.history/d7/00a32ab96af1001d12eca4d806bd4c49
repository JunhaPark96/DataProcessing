package presentation;

import java.sql.Connection;
import java.sql.Date;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

import connection.JDBC;

public class MainController {
	private static boolean isExit = false;
	private static Scanner scanner = new Scanner(System.in);
	private static JDBC jdbc = JDBC.getInstance();
	
	public static void main(String[] args) {
		try {
			while (!isExit) {
			    System.out.println("1. 데이터 조회, 2. 보너스 처리, 3. 저장");
			    int target = scanner.nextInt();
			    if (target == 1) {
			    	printEMPList();
			    } else if (target == 2) {
			    	bonusLogic();
			    } else if (target == 3) {
			    	
			    }
			    else {
			        System.out.println("다시 입력해주십시오");
			    }
			}
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public static void printEMPList() {
	    try {
	        Connection conn = jdbc.getConnection(); // jdbc연결 가져오기
	        Statement stmt = conn.createStatement();
	        ResultSet rs = stmt.executeQuery("select * from emp");
	        System.out.println("");
	        while (rs.next()) {
	            int id = rs.getInt(1);
	            String ename = rs.getString(2);
	            String job = rs.getString(3);
	            int mgr = rs.getInt(4);
	            Date hireDate = rs.getDate(5);
	            int sal = rs.getInt(6);
	            int comm = rs.getInt(7);
	            int deptno = rs.getInt(8);
	            System.out.println(
	                    rs.getInt("empno") + " " + rs.getString("ename") + " " + rs.getString("job")
	                            + " " + rs.getInt("mgr") + " " + rs.getString("hireDate")
	                            + " " + rs.getInt("sal") + " " + rs.getInt("comm") +
	                            " " + rs.getInt("deptno"));
	        }
	    } catch (SQLException e) {
	        e.printStackTrace();
	    } finally {
	        // connection 종료 안함
	    }

	}
}


